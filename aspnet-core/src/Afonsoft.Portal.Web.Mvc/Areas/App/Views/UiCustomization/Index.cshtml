@using Abp.Extensions
@using Afonsoft.Portal
@using Afonsoft.Portal.Web.Areas.App.Startup
@model Afonsoft.Portal.Web.Areas.App.Models.UiCustomization.UiCustomizationViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Common.UiCustomization;
}
@section Styles
{
    <link rel="stylesheet" abp-href="/view-resources/Areas/App/Views/UiCustomization/Index.css" asp-append-version="true" />
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/UiCustomization/Index.js" asp-append-version="true"></script>
}
