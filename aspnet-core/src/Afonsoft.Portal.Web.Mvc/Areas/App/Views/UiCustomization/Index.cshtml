                            <a href="#default" class="nav-link @(Model.Theme == AppConsts.ThemeDefault ? "active" : "")" data-toggle="tab" role="tab">
                                <img src="@(ApplicationPath)Common/Images/metronic-themes/default.png" width="150" />
                                <span class="theme-name">@L(AppConsts.ThemeDefault.ToPascalCase())</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#theme2" class="nav-link @(Model.Theme == AppConsts.Theme2 ? "active" : "")" data-toggle="tab" role="tab">
