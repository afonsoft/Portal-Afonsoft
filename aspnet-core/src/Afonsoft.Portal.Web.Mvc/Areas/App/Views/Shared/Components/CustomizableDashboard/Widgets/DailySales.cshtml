<div class="kt-portlet kt-portlet--height-fluid DailySalesContainer">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                Daily Sales
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
         
        </div>
    </div>
    <div class="kt-portlet__body">
        <div class="row">
            <div class="col-md-12">
                <canvas class="m_chart_daily_sales" id="m_chart_daily_sales"></canvas>
            </div>
        </div>
    </div>
</div>